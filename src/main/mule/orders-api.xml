    </flow>
    <flow name="get:\orders\(oid):orders-api-config">
        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core">
            <ee:variables>
                <ee:set-variable variableName="oid">attributes.uriParams.'oid'</ee:set-variable>
            </ee:variables>
        </ee:transform>
        <set-payload value='#[{

